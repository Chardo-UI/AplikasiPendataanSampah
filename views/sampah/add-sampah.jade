extends ../layout/base
block content
    section.content-header
        h1
            | Data Sampah
        ol.breadcrumb
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Sampah Terkini
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/sampah/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama 
                                    input(type='text',value='#{nama}', name='nama',placeholder='Masukkan Nama').form-control
                                .form-group
                                    label
                                        | Jenis
                                    input(type='text',name='jenis',placeholder='Masukkan Jenis').form-control
                                .form-group
                                    label
                                        | Berat
                                    input(type='text',name='berat',placeholder='Masukkan Berat').form-control
                                .form-group
                                    label
                                        | Daur Ulang
                                    input(type='text',name='daur_ulang',placeholder='Masukkan Daur Ulang').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/sampah/data').btn.btn-primary.pull-right
                                    | Back